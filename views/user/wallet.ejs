                              <script>
                              $(document).ready(function() {
                                const limit = 10; // Number of transactions per page
                                let currentPage = 1;
                              
                                function fetchTransactions(page = 1) {
                                  $.ajax({
                                    url: `/wallet/transactions?page=${page}`,
                                    method: 'GET',
                                    success: function(response) {
                                      const { transactions, totalTransactions, totalPages } = response;
                                      $('#transactionTableBody').empty();
                              
                                      transactions.forEach(transaction => {
                                        $('#transactionTableBody').append(`
                                          <tr>
                                            <td>${new Date(transaction.date).toLocaleString()}</td>
                                            <td>${transaction.description}</td>
                                            <td class="${transaction.type === 'credit' ? 'transaction-credit' : 'transaction-debit'}">
                                              ₹${transaction.amount.toFixed(2)}
                                            </td>
                                            <td>
                                              <span class="badge ${transaction.type === 'credit' ? 'badge-success' : 'badge-danger'}">
                                                ${transaction.type === 'credit' ? 'Credit' : 'Debit'}
                                              </span>
                                            </td>
                                          </tr>
                                        `);
                                      });
                              
                                      // Pagination Controls
                                      $('#paginationControls').empty();
                                      for (let i = 1; i <= totalPages; i++) {
                                        $('#paginationControls').append(`
                                          <a href="#" class="pagination-link" data-page="${i}">${i}</a>
                                        `);
                                      }
                              
                                      // Update current page
                                      currentPage = page;
                                    },
                                    error: function() {
                                      Swal.fire({
                                        title: 'Error!',
                                        text: 'Failed to fetch transactions. Please try again later.',
                                        icon: 'error',
                                        confirmButtonText: 'OK'
                                      });
                                    }
                                  });
                                }
                              
                                // Fetch initial transactions on page load
                                fetchTransactions(currentPage);
                              
                                // Handle pagination click
                                $(document).on('click', '.pagination-link', function(e) {
                                  e.preventDefault();
                                  const page = $(this).data('page');
                                  fetchTransactions(page);
                                });
                              });
                              </script>
                              

